generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Synset {
  id         Int     @id @default(autoincrement())
  path       String  @unique
  size       Int
  depth      Int
  parentPath String? @map("parent_path")
  name       String

  @@index([parentPath], name: "idx_parent_path")
  // GIN trigram index on name is defined in migration SQL (requires pg_trgm extension)
  @@map("synsets")
}
